datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model User {
  id Int @id @default(autoincrement())
  telegramId String @unique
  clanId Int?
  clan Clan? @relation(fields: [clanId], references: [id])
  isPremium Boolean @default(false)
  steps Int @default(0)
  coinsBuffer Int @default(0)
  coins Int @default(0)
  referrerId Int?
  referred User[] @relation("UserReferrals")
  transactions Transaction[]
  stepsHistory StepsHistory[]
}

model Clan {
  id Int @id @default(autoincrement())
  name String @unique
  users User[]
}

model StepsHistory {
  id Int @id @default(autoincrement())
  userId Int
  date DateTime
  steps Int
  coinsEarned Int
  user User @relation(fields: [userId], references: [id])
}

model Transaction {
  id Int @id @default(autoincrement())
  userId Int
  type String
  amount Int
  description String
  date DateTime @default(now())
  user User @relation(fields: [userId], references: [id])
}
